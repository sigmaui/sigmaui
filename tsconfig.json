{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@packages/*": [
        "../../../packages/*"
      ],
      "@packages/common/theme/types": [
        "packages/common/theme/types"
      ],
      "@packages/react/types": [
        "packages/react/src/types"
      ],
      "@packages/react/hooks/*": [
        "packages/react/src/hooks/*/src"
      ],
      "@packages/react/hooks/with-stylex": [
        "packages/react/src/hooks/with-stylex/src"
      ],
      "@packages/react/hooks/use-theme": [
        "packages/react/src/hooks/use-theme/src"
      ],
      "@packages/react/components/*": [
        "packages/react/src/components/*/src"
      ],
      "@packages/react/components/select": [
        "packages/react/src/components/select/src"
      ],
      "@packages/react/components/button": [
        "packages/react/src/components/button/src"
      ],
      "@packages/vue/types": [
        "packages/vue/src/types"
      ],
      "@packages/vue/hooks/*": [
        "packages/vue/src/hooks/*/src"
      ],
      "@packages/vue/hooks/with-stylex": [
        "packages/vue/src/hooks/with-stylex/src"
      ],
      "@packages/vue/components/button": [
        "packages/vue/src/components/button/src"
      ]
    }
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/.turbo"
  ]
}